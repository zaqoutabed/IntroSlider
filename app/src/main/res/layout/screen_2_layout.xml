<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_screen2">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/img_width"
            android:layout_height="@dimen/img_height"
            android:src="@drawable/ic_contacts" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title2"
            android:textColor="@android:color/white"
            android:textSize="@dimen/screen_title"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingEnd="@dimen/description_padding"
            android:paddingLeft="@dimen/description_padding"
            android:paddingRight="@dimen/description_padding"
            android:paddingStart="@dimen/description_padding"
            android:text="@string/description2"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/screen_description" />

    </LinearLayout>

</RelativeLayout>